# Environment Variables
PORT=8000
HOST=0.0.0.0

# API Configuration
API_V1_STR=/api
PROJECT_NAME=Affective Computing API

# File Upload
UPLOAD_DIR=uploads
TEMP_DIR=temp
MAX_UPLOAD_SIZE=104857600

# SenseVoice Configuration
# Multilingual speech recognition and speech emotion recognition
SENSEVOICE_MODEL=iic/SenseVoiceSmall
SENSEVOICE_DEVICE=cpu  # Use "cuda:0" if GPU with CUDA is available for faster inference
SENSEVOICE_VAD_MODEL=fsmn-vad
SENSEVOICE_MAX_SEGMENT_TIME=30000
SENSEVOICE_LANGUAGE=auto  # Options: auto, zh, en, yue, ja, ko, nospeech
SENSEVOICE_USE_ITN=True

# DeepFace Configuration (for facial emotion recognition)
DEEPFACE_BACKEND=opencv  # Options: opencv, ssd, dlib, mtcnn, retinaface
DEEPFACE_MODEL=Facenet   # Options: VGG-Face, Facenet, OpenFace, DeepFace, DeepID, ArcFace

# Processing
FRAME_SAMPLE_RATE=30  # Analyze every Nth frame for facial emotions

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173
